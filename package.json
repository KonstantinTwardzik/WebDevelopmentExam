{
    "name": "web_development_exam",
    "repository": "https://github.com/KonstantinTwardzik/WebDevelopmentExam",
    "license": "UNLICENSED",
    "version": "1.0.1",
    "dependencies": {
        "http-server": "latest",
        "npm": "^6.0.0"
    },
    "devDependencies": {
        "eslint": "latest",
        "less": "latest",
        "browserify": "latest",
        "babel-minify": "latest",
        "less-plugin-clean-css": "latest"
    },
    "scripts": {
        "clean": "rm -rf dist && rm -rf node_modules",
        "clean:dist": "rm -rf dist",
        "dist": "npm run clean:dist && mkdir dist",
        "lint": "eslint -c .eslintrc.json src/js/**",
        "html": "cp -r src/index.html dist",
        "assets": "cp -r src/assets/* dist",
        "css": "lessc src/styles/style.less dist/style.min.css",
        "css:min": "lessc --clean-css src/styles/style.less dist/style.min.css",
        "js": "npm run lint && browserify src/js/Main.js > dist/main.js",
        "postjs": "cp -r dist/main.js dist/main.min.js && rm -f dist/main.js",
        "js:min": "npm run lint && browserify src/js/Main.js > dist/main.js && minify dist/main.js > dist/main.min.js",
        "postjs:min": "cp -r dist/main.js dist/main.min.js && rm -f dist/main.js",
        "debug": "npm run dist && npm run assets && npm run html && npm run css && npm run js",
        "build": "npm run dist && npm run assets && npm run html && npm run css:min && npm run js:min",
        "start": "http-server dist -p 8080 -c 127.0.0.1:8080"
    }
}
